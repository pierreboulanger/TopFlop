<div class="text-center">
  <h1>Qui est le Top selon toi ?</h1>

  <%= simple_form_for [@team, @game, @top], url: team_game_top_index_path(@team, @game) do |f| %>
    <%= f.input :user_id, collection: @team.users, label_method: :name, value_method: :id,label: "Joueur", include_blank: false, selected: @top.user_id %>
    <%= f.input :comment %>
    <%= f.input :game_id, as: :hidden, input_html: {value: @game.id} %>
    <%= f.button :submit, class:"btn btn-success btn-full-width" %>
  <% end %>
</div>

<div class="back fixed-bottom">
  <%= link_to "Back", request.referer, class:"btn btn-danger btn-full-width" %>
</div>
